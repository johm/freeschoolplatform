

<h1>Courses</h1>
<%= link_to 'Propose a course!', new_course_proposal_path, :class=>"btn btn-primary" %>
<table>
  <thead>
    <tr>
      <th>Name</th>
      <th>Very short description</th>
      <th>Full description</th>
      <th>Location</th>
      <th>Instructor</th>
      <th>Homesite</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @courses.each do |course| %>
      <tr>
        <td><%= course.name %></td>
        <td><%= course.very_short_description %></td>
        <td><%= course.full_description %></td>
        <td><%= course.location %></td>
        <td><%= course.instructor %></td>
        <td><%= course.homesite %></td>
        <td><%= link_to 'Show', course %></td>
        <td><%= link_to 'Edit', edit_course_path(course) %></td>
        <td><%= link_to 'Destroy', course, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>


